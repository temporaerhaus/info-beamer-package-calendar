{
    "name": "Plugin: Frab Event Calendar",
    "permissions": {
        "network": "Has to fetch schedule from remote site"
    },
    "options": [{
        "title": "Frab Event Calendar Plugin",
        "type": "section"
    }, {
        "title": "Font",
        "ui_width": 4,
        "name": "font",
        "type": "font",
        "default": "font.ttf"
    }, {
        "title": "Time Zone",
        "ui_width": 4,
        "name": "timezone",
        "type": "select",
        "hint": "The timezone",
        "options": [
            ["UTC", "UTC"],
            ["Europe/Berlin", "Europa / Berlin"],
            ["US/Central", "US / Central"],
            ["US/Eastern", "US / Eastern"],
            ["US/Michigan", "US / Michigan"],
            ["US/Mountain", "US / Mountain"],
            ["US/Pacific", "US / Pacific"]
        ],
        "default": "UTC"
    }, {
        "title": "Locale",
        "ui_width": 4,
        "name": "locale",
        "type": "select",
        "hint": "The locale for rendering weekdates",
        "options": [
            ["de_DE", "de_DE"]
        ],
        "default": "de_DE"
    }, {
        "title": "Fahrplan URLs",
        "name": "schedule_urls",
        "doc_link": true,
        "type": "list",
        "itemname": "URL",
        "hint": "List all fahrplan.xml (frab style). They will be merged",
        "items": [{
            "title": "URL",
            "ui_width": 9,
            "name": "url",
            "type": "string",
            "default": "http://localhost/"
        }]
    }]
}